{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "global": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "podLabels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "podAnnotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "serviceAccount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": ["string", "null"] },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "nodeAgent": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tag": { "type": "string" },
            "domain": { "type": "string" },
            "region": { "type": "string" },
            "endpoint": { "type": "string" },
            "account": { "type": "string" },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            },
            "override": { "type": "string" }
          }
        },
        "additionalArgs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "affinity": { "type": "object" },
        "resources": { "type": "object" },
        "resizePolicy": {
          "type": "array",
          "items": { "type": "object" }
        },
        "securityContext": { "type": "object" },
        "tolerations": {
          "type": "array",
          "items": { "type": "object" }
        },
        "nodeSelector": { "type": "object" },
        "priorityClassName": { "type": "string" },
        "podLabels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "podAnnotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "dcgmAgent": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tag": { "type": "string" },
            "domain": { "type": "string" },
            "region": { "type": "string" },
            "endpoint": { "type": "string" },
            "account": { "type": "string" },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            },
            "override": { "type": "string" }
          }
        },
        "affinity": { "type": "object" },
        "resources": { "type": "object" },
        "resizePolicy": {
          "type": "array",
          "items": { "type": "object" }
        },
        "tolerations": {
          "type": "array",
          "items": { "type": "object" }
        },
        "podLabels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "podAnnotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "updateStrategy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["RollingUpdate", "OnDelete"]
        },
        "rollingUpdate": {
          "type": "object",
          "properties": {
            "maxUnavailable": {
              "type": ["string", "integer"]
            }
          }
        }
      }
    },
    "podMonitor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "interval": { "type": "string" },
        "scrapeTimeout": { "type": "string" },
        "additionalLabels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "metricRelabelings": {
          "type": "array",
          "items": { "type": "object" }
        },
        "relabelings": {
          "type": "array",
          "items": { "type": "object" }
        }
      }
    }
  }
}
